
[alias]
	co = checkout
	cob = checkout -b
	br = branch
	brd = branch -d
	brD = branch -D
	st = status
	cm = commit -m
	cp = cherry-pick
	amend = commit --amend -m
	po = push origin
	pom = push origin master
	plo = pull origin
	plom = pull origin master
	f = "!git ls-files | grep -i"
	gr = grep -Ii
[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1
[push]
	default = upstream
[merge]
	conflictstyle = diff3
	tool = code
[user]
	name = Imad
	email = imad.dabbura@hotmail.com
[color]
	ui = auto
	diff = auto
	interactive = autos
	branch = auto
[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]

	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]

	added = yellow
	changed = green
	untracked = cyan
[core]
	editor = code
	excludesfile = ~/.gitignore_global
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[alias]
	graph = log --all --graph --pretty=format:'%C(auto)%h%C(auto)%d %s %C(dim white)(%aN, %ar)'
	graph2 = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
